<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/file_list_item_padding" >

    <ImageView
        android:id="@+id/picture"
        android:layout_width="60dp"
        android:layout_height="80dp"
        android:scaleType="centerInside"
        android:src="@drawable/avatar_guest" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/file_list_item_padding" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="姓名："
                android:textColor="@color/gray"
                android:textSize="@dimen/file_size_size" />

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="张三"
                android:textColor="@color/gray"
                android:textSize="@dimen/file_size_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="职务："
                android:textColor="@color/gray"
                android:textSize="@dimen/file_size_size" />

            <TextView
                android:id="@+id/post"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="董事长"
                android:textColor="@color/gray"
                android:textSize="@dimen/file_size_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="简介："
                android:textColor="@color/gray"
                android:textSize="@dimen/file_size_size" />

            <TextView
                android:id="@+id/brief"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="2"
                android:maxLines="2"
                android:text="张三董事长张三董事长张三董事长张三董事长张三董事长张三董事长张三董事长张三董事长"
                android:textColor="@color/gray"
                android:textSize="@dimen/file_size_size" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>